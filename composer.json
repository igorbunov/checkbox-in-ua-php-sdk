{
  "name": "igorbunov/checkbox-in-ua-php-sdk",
  "description": "PHP SDK for integration with checkbox.in.ua api",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "igorbunov",
      "email": "igorbunov.ua@mail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "guzzlehttp/guzzle": "^6.3",
    "php": ">=7.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.1 || ^9.1",
    "squizlabs/php_codesniffer": "3.*",
    "phpstan/phpstan": "^0.12.19",
    "otis22/php-coverage-checker": "^1.2",
    "sensiolabs/security-checker": "^6.0",
    "wapmorgan/php-code-fixer": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "igorbunov\\Checkbox\\" : "src"
    }
  },
  "scripts": {
    "unit-tests": [
      "vendor/bin/phpunit --testsuite main  && vendor/bin/php-coverage-checker build/logs/clover.xml 60"
    ],
    "static": [
      "vendor/bin/phpcs --ignore-annotations --standard=PSR12 src tests && vendor/bin/phpcf src tests && vendor/bin/phpstan analyse --level=max src"
    ],
    "check-composer": [
      "composer validate &&  /usr/bin/local-php-security-checker"
    ],
    "all-tests": [
      "composer check-composer &&  composer unit-test && composer static"
    ]
  }
}
